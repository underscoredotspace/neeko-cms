{
  "name": "neeko-cms",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -b",
    "prestart": "npm run build",
    "start": "node ./.dist",
    "lint": "eslint --ext=ts ./src",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {
    "@prisma/client": "^3.9.2",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^27.5.1",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "prisma": "^3.9.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "license": "CC-BY-4.0",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npm start"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --max-warnings=0"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=14"
  }
}
